<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.internship2020.activity.main.MainActivity"
    android:background="@drawable/changecolorback">

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aclonica"
        android:text="Login As"
        android:textColor="#02ABF9"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135" />

    <Button
        android:id="@+id/btn_admin"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="191dp"
        android:layout_marginBottom="209dp"
        android:background="@drawable/login_back"
        android:elevation="10dp"
        android:fontFamily="@font/aclonica"
        android:text="Admin"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_login"
        app:layout_constraintVertical_bias="0.0" />

    <Button

        android:id="@+id/btn_student"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginStart="191dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/studentbuttonback"
        android:fontFamily="@font/aclonica"
        android:text="@string/student"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_admin"
        app:layout_constraintVertical_bias="0.0" >
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>