<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.internship2020">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.admin.approved.RecyclerViewAdminApproved">
            <intent-filter>
            <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity android:name=".activity.ReviewForm"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.admin.AdminMainPage"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.student.StudentMainPage"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.admin.Login_admin"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.admin.requested.RecyclerViewAdminRequested"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.student.submitted.RecyclerViewStudentSubmitted"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.admin.requested.confirmMessageApprove"
            android:theme="@style/AppTheme.CustomTheme">
        </activity>
        <activity
            android:name=".activity.admin.requested.confirmMessageDelete"
            android:theme="@style/AppTheme.CustomTheme">
        </activity>
        <activity
            android:name=".splash_screen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.student.Achievement_Form"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity android:name=".activity.driveView"
            android:theme="@style/AppTheme.CustomTheme">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>